<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editOrderCartIdEditText"
        android:layout_width="242dp"
        android:layout_height="58dp"
        android:layout_marginBottom="352dp"
        android:backgroundTint="#4A7350"
        android:ems="10"
        android:gravity="center"
        android:hint="Cart ID"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/editOrderSubmitButton"
        android:layout_width="174dp"
        android:layout_height="96dp"
        android:backgroundTint="#4E8353"
        android:text="Submit"
        app:iconTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922" />

    <TextView
        android:id="@+id/editOrderTextView"
        android:layout_width="333dp"
        android:layout_height="129dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editOrderCountEditText"
        android:layout_width="242dp"
        android:layout_height="58dp"
        android:layout_marginBottom="296dp"
        android:backgroundTint="#4A7350"
        android:ems="10"
        android:gravity="center"
        android:hint="Product Count"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editOrderUserIdEditText"
        android:layout_width="242dp"
        android:layout_height="58dp"
        android:layout_marginBottom="236dp"
        android:backgroundTint="#4A7350"
        android:ems="10"
        android:gravity="center"
        android:hint="User ID"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>